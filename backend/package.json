{
  "name": "express-ts-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm --sourcemap",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier -w ."
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "mongoose": "^8.18.0",
    "pino": "^8.0.0",
    "pino-http": "^8.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.50.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0"
  }
}
